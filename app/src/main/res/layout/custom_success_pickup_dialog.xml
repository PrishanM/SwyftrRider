<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cornered_dialog">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PICKUP SUCCESS"
            android:textColor="@color/colorTextDialog"
            android:textSize="@dimen/font_xxxlarge"
            android:gravity="center"
            android:paddingTop="@dimen/space_normal"
            android:paddingBottom="@dimen/space_normal"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorViewTransparent"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_large" />

        <TextView
            android:id="@+id/txtOrderId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Order 0001"
            android:textColor="@color/colorTextDialog"
            android:textSize="@dimen/font_xxlarge"
            android:gravity="center"
            android:paddingTop="@dimen/space_normal"
            android:paddingBottom="@dimen/space_normal"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_large" />

        <TextView
            android:id="@+id/txtLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/colorTextDialog"
            android:textSize="@dimen/font_xxlarge"
            android:gravity="center"
            android:paddingTop="@dimen/space_normal"
            android:paddingBottom="@dimen/space_normal"/>

        <TextView
            android:id="@+id/txtTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/colorTextDialog"
            android:textSize="@dimen/font_xxlarge"
            android:gravity="center"
            android:paddingTop="@dimen/space_normal"
            android:paddingBottom="@dimen/space_normal"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_large" />

        <TextView
            android:id="@+id/txtCustomer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/colorTextDialog"
            android:textSize="@dimen/font_xxlarge"
            android:gravity="center"
            android:paddingTop="@dimen/space_normal"
            android:paddingBottom="@dimen/space_normal"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_large" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorViewTransparent"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1"
            android:gravity="right">

            <Button
                android:id="@+id/btnContinue"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:text="Continue"
                android:textColor="@color/colorAccent"
                android:background="@android:color/white"/>

        </LinearLayout>


    </LinearLayout>

</RelativeLayout>