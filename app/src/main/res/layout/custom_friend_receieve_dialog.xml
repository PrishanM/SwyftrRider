<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cornered_dialog">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="FRIEND RECEIVE"
            android:textColor="@color/colorTextDialog"
            android:textSize="@dimen/font_xxxlarge"
            android:gravity="center"
            android:paddingTop="@dimen/space_normal"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fill Below Fields to Complete The Transaction"
            android:textColor="@color/colorTextDialog"
            android:textSize="@dimen/font_large"
            android:gravity="center"
            android:paddingBottom="@dimen/space_normal"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorViewTransparent"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_normal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@android:color/white"
            android:padding="@dimen/activity_horizontal_margin"
            android:gravity="center_vertical"
            android:weightSum="1">

            <ImageView
                android:id="@+id/imgSignatureCheck"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/onprocess_ico"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Signature"
                android:layout_marginLeft="@dimen/space_normal"
                android:textSize="@dimen/font_xxlarge"/>

            <ImageView
                android:id="@+id/imgSignature"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/forward"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:background="@color/colorHint"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@android:color/white"
            android:padding="@dimen/activity_horizontal_margin"
            android:gravity="center_vertical"
            android:weightSum="1">

            <ImageView
                android:id="@+id/imgNicCheck"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/onprocess_ico"/>

            <EditText
                android:id="@+id/edtNic"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint="NIC"
                android:layout_marginLeft="@dimen/space_normal"
                android:textSize="@dimen/font_xxlarge"/>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:background="@color/colorHint"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@android:color/white"
            android:padding="@dimen/activity_horizontal_margin"
            android:gravity="center_vertical"
            android:weightSum="1">

            <ImageView
                android:id="@+id/imgNicImgCheck"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/onprocess_ico"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="NIC Image"
                android:layout_marginLeft="@dimen/space_normal"
                android:textSize="@dimen/font_xxlarge"/>

            <ImageView
                android:id="@+id/imgNic"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/camera"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:background="@color/colorHint"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@android:color/white"
            android:padding="@dimen/activity_horizontal_margin"
            android:gravity="center_vertical"
            android:weightSum="1">

            <ImageView
                android:id="@+id/imgFriendImgCheck"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/onprocess_ico"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Friend Photo"
                android:layout_marginLeft="@dimen/space_normal"
                android:textSize="@dimen/font_xxlarge"/>

            <ImageView
                android:id="@+id/imgFriend"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/camera"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorViewTransparent"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1"
            android:gravity="right">

            <Button
                android:id="@+id/btnCancel"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="50dp"
                android:text="Cancel"
                android:textColor="@color/colorAccent"
                android:background="@android:color/white"/>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/colorViewTransparent"/>

            <Button
                android:id="@+id/btnDone"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="50dp"
                android:text="Done"
                android:textColor="@color/colorAccent"
                android:background="@android:color/white"/>

        </LinearLayout>


    </LinearLayout>

</RelativeLayout>